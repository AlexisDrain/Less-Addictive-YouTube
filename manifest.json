{

  "description": "Remove some elements from Youtube (like thumbnails and comments) to make it less addicting.",
  "manifest_version": 2,
  "name": "LessAddictingYoutube",
  "version": "1.0",
  "homepage_url": "https://github.com/JesseDrain/Less-Addictive-YouTube",
  "icons": {
    "48": "icons/logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.google.com/*"],
      "js": ["contentscript.js"]
    }
  ],

  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  },
  
  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_title": "Less Addictive Youtube",
    "default_popup": "options/options.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]

}
